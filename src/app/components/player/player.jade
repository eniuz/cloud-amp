.player
  h1 Player!
  img(src="{{toPlayer.artwork_url}}")
  p {{toPlayer.title}}
  button((click)="play()") Play
  button((click)="stop()") Stop
  input.playback-rate-control((input)="source.playbackRate.value = slider.value", type="range", min="0.25", max="1.75", step="0.05", value="1" #slider)
  span.playback-rate-value {{slider.value}}
